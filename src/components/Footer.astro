---
import Facebook from "@assets/FacebookLogoFooter.svg"
import Instagram from "@assets/InstagramLogoFooter.svg"
import X from "@assets/XLogoFooter.svg"
import Youtube from "@assets/YoutubeLogo.svg"

const socials = [
    {
        title: "Facebook",
        src: Facebook.src,
        href: "https://www.facebook.com/BancadaNaranjaD",
    },
    {
        title: "Instagram",
        src: Instagram.src,
        href: "https://www.instagram.com/dipciudadanomx?igsh=MXdnbmE3YXIwN3VnZw==",
    },
    {
        title: "X",
        src: X.src,
        href: "https://x.com/BancadaNaranjaD",
    },
    {
        title: "Youtube",
        src: Youtube.src,
        href: "https://www.youtube.com/@BancadaNaranjaD",
    },
];
---

<footer id="RedesSociales" class="px-2 py-8 bg-gray-bg">
    <div class="flex gap-5 items-center justify-between bg-orange-bnd rounded-2xl px-4 py-2 max-w-[1000px] mx-auto">
        <a class="text-center font-semibold text-white text-sm max-[425px]:text-xs" href="https://transparencia.movimientociudadano.mx/" target="_blank"
            >Transparencia y Protecci√≥n de Datos Personales</a
        >
        <div class="flex items-center gap-2">
            {
                socials.map((social) => (
                    <a href={social.href} target="_blank">
                        <img class="w-full h-auto max-w-10" src={social.src} alt="" />
                    </a>
                ))
            }
        </div>
    </div>
</footer>
